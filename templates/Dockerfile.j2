# This Dockerfile was generated from templates/Dockerfile.j2
{% set beat_home = '/usr/share/%s' % beat -%}
{% set binary_file = '%s/%s' % (beat_home, beat) -%}

FROM golang:1.11.5 as golang

# NOTE(Alex): No idea why `go get` complains, just ignore it
RUN go get -u -d github.com/magefile/mage && \
    cd $GOPATH/src/github.com/magefile/mage && \
    go run bootstrap.go && \
    go get -u github.com/elastic/beats || true && \
    cd $GOPATH/src/github.com/elastic/beats/{{ beat }} && \
    git remote add alav http://github.com/alexandruavadanii/beats && \
    git fetch alav && \
    git checkout v{{ elastic_version}}-arm64v8 && \
    make && \
    mkdir -p build/golang-crossbuild && \
    cp -a {{ beat }} build/golang-crossbuild/{{ beat }}-linux-arm64 && \
    apt update && \
    apt install -y virtualenv && \
    GOLANG_CROSSBUILD=1 PLATFORMS="+all linux/arm64" mage package

FROM centos:7

RUN yum update -y && yum install -y curl && yum clean all

COPY --from=golang /go/src/github.com/alexandruavadanii/beats/{{ beat }}/build/distributions/{{ beat }}-{{ elastic_version }}-linux-arm64.tar.gz /tmp
RUN tar zxf /tmp/FIXME -C /tmp && \
    mv /tmp/{{ beat }}-{{ elastic_version }}-linux-arm64 {{ beat_home }} && \
    rm /tmp/{{ beat }}-{{ elastic_version }}-linux-arm64.tar.gz


ENV ELASTIC_CONTAINER true
ENV PATH={{ beat_home }}:$PATH

COPY config {{ beat_home }}

# Add entrypoint wrapper script
ADD docker-entrypoint /usr/local/bin

# Provide a non-root user.
RUN groupadd --gid 1000 {{ beat }} && \
    useradd -M --uid 1000 --gid 1000 --home {{ beat_home }} {{ beat }}

WORKDIR {{ beat_home }}
RUN mkdir data logs && \
    chown -R root:{{ beat }} . && \
    find {{ beat_home }} -type d -exec chmod 0750 {} \; && \
    find {{ beat_home }} -type f -exec chmod 0640 {} \; && \
    chmod 0750 {{ binary_file }} && \
    {%- if beat == 'filebeat' or beat == 'metricbeat' -%}
    chmod 0770 modules.d && \
    {% endif -%}
    chmod 0770 data logs
RUN chmod 0755 /usr/local/bin/docker-entrypoint

{%- if beat == 'packetbeat' %}
RUN setcap cap_net_raw,cap_net_admin=eip {{ binary_file }}
{% endif %}
{%- if beat == 'heartbeat' %}
RUN setcap cap_net_raw=eip {{ binary_file }}
{% endif %}
{%- if beat == 'auditbeat' %}
USER root
{% else %}
USER {{ beat }}
{% endif %}

LABEL org.label-schema.schema-version="1.0" \
  org.label-schema.vendor="Elastic" \
  org.label-schema.name="{{ beat }}" \
  org.label-schema.version="{{ elastic_version }}" \
  org.label-schema.url="https://www.elastic.co/products/beats/{{ beat }}" \
  org.label-schema.vcs-url="https://github.com/elastic/beats-docker" \
{% if image_flavor == 'oss' -%}
  license="Apache-2.0"
{% else -%}
  license="Elastic License"
{% endif -%}

ENTRYPOINT ["/usr/local/bin/docker-entrypoint"]
CMD ["-e"]
